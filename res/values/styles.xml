<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 自定义的style，向导界面中的控件使用 -->
    <style name="MyTextViewTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textSize">14dip</item>
    </style>

    <!-- 按钮的style，Button的style引用@style/My... -->
    <style name="MyButtonStyle_Next" parent="MyTextViewTheme">
        <item name="android:background">@drawable/style_mybutton</item>
        <item name="android:drawableRight">@drawable/button_next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">下一步</item>
    </style>
    
    <style name="MyButtonStyle_Prev" parent="MyTextViewTheme">
        <item name="android:background">@drawable/style_mybutton</item>
        <item name="android:drawableLeft">@drawable/button_prev</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:text">上一步</item>
    </style>

</resources>