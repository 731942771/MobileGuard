<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ff6600"
        android:gravity="center"
        android:text="验证密码"
        android:textColor="#660066"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/et_dialog_confirmphoneguardpswd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp" >

        <Button
            android:background="@drawable/style_mybutton"
            android:id="@+id/btn_dialog_resolve_confirmphoneguardpswd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:text="确认"
            android:textSize="12dp" />

        <Button
            android:background="@drawable/style_mybutton"
            android:id="@+id/btn_dialog_cancel_confirmphoneguardpswd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>