<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_createphoneguardpswd"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:background="#ff6600"
        android:gravity="center"
        android:text="创建安全号码"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_dialog_sim_guard_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="请输入电话号码"
        android:inputType="phone"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_dialog_sim_addresslist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="从通讯录选择联系人号码"
         android:background="#ff0033"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp" >

        <Button
            android:id="@+id/btn_dialog_sim_guard_phone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/style_mybutton"
            android:text="确认"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_dialog_sim_guard_cnacle"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/style_mybutton"
            android:text="取消"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>