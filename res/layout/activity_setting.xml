<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cuiweiyou="http://schemas.android.com/apk/res/com.cuiweiyou.mobileguard"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:background="#ff6600"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="18dp" />

	<com.cuiweiyou.mobileguard.ui.SettingItemRelativeLayout
	    cuiweiyou:autoupdate_title="自动更新"
	    cuiweiyou:autoupdate_desc_on="自动更新功能已经打开"
	    cuiweiyou:autoupdate_desc_off="自动更新功能已经关闭"
	    android:id="@+id/sirl_setting_item"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>

	<com.cuiweiyou.mobileguard.ui.SettingItemRelativeLayout
	    cuiweiyou:autoupdate_title="设备管理员"
	    cuiweiyou:autoupdate_desc_on="管理员功能已经打开。\n可以使用短信控制远程锁屏、清除数据"
	    cuiweiyou:autoupdate_desc_off="管理员功能已经关闭。\n现在不能使用远程锁屏、清除数据功能"
	    android:id="@+id/sirl_setting_admin"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
	
</LinearLayout>