<!--
 ~~~第5次提交~~~
 “设置中心”界面的每一条项目
 1）创建这个条目，！~~~~~~~~~~~~~自定义控件 1 ~~~~~~~~~~~~~~~~~~~~~~~~~~
 2）创建一个继承自RelativeLayout的类
 3）在这个类里将这个xml条目布局转为View
 4）在类里增加一些功能
 5）在“设置中心”xml布局，调用类创建条目
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_setting_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#ccffff" >

    <TextView
        android:id="@+id/tv_setting_item_autoupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="自动更新"
        android:textColor="#663300"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_setting_item_autoupdate_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_setting_item_autoupdate"
        android:layout_marginLeft="5dp"
        android:text="自动更新功能已经关闭"
        android:textColor="#996633"
        android:textSize="12dp" />

    <!-- 为了实现点击整个条目的任何位置都改变复选框状态
    同时避免复选框自身点击时引起的冲突，禁用clickable
    -->
    <CheckBox
        android:id="@+id/cb_setting_item_autoupdate"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

</RelativeLayout>